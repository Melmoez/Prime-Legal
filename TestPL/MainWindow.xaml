<Window
    x:Class="TestPL.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestPL"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            x:Name="TbPod"
            TextAlignment="Center"
            TextWrapping="Wrap">
            Войдите в свой аккаунт затем вы сможете продолжить работать с этой программой<LineBreak />
            <Run x:Name="Runtb" Foreground="Red" />
            <Hyperlink x:Name="HL" Click="Runtb2_Click" />
        </TextBlock>
    </Grid>
</Window>
