<Window
    x:Class="Prime_Legal.Windows.WinAuthorization"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prime_Legal.Windows"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Авторизация"
    Width="878"
    Height="494"
    mc:Ignorable="d">
    <Grid x:Name="GridMain" Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="457*" />
            <ColumnDefinition Width="413*" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="GridImage" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="/Prime Legal;component/Resources/BG.jpg" />
            </Grid.Background>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="25"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Rectangle x:Name="rec" Grid.RowSpan="10" Grid.ColumnSpan="3">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Prime Legal;component/Resources/BG2.png" />
                </Rectangle.Fill>
            </Rectangle>
            <DockPanel LastChildFill="True" Grid.Column="1" Grid.Row="1">
                <Image DockPanel.Dock="Left" Width="100" />
                <Label/>
            </DockPanel> 
        </Grid>
    </Grid>
</Window>
